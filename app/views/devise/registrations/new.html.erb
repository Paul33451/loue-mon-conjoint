

<div class="form">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<h2 mb-2>Inscription</h2>

    <span class='d-flex justify-content-between'> <%= f.input :first_name, label: "Prénom" %>
    <%= f.input :last_name, label: "Nom"%> </span>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password, label: "Mot de passe", required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,label: "Confirmation du mot de passe",
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :username, label:"Nom d'utilisateur" %>
    <%= f.input :phone_number, label: "Téléphone" %>
    <%= f.input :photo, label: "Télécharger une photo" %>
    <%= f.input :photo_cache, as: :hidden %>

    <div class="d-flex justify-content-between">
        <%= f.button :submit, "Inscription", class: "btn-ghost"%>
    </div>
  </div>
<% end %>

<div class="form d-flex justify-content-between align-items-center">
 <h2>Déjà inscrit ? </h2>
<%= link_to 'Connexion', new_user_session_path, class: 'btn' %>
</div>
