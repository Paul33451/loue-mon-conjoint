<div class="form">
  <span class="d-flex">
    <% if current_user.photo.present? %>
    <%= cl_image_tag current_user.photo, class: "avatar"%>
    <% else %>
    <%= image_tag "https://cdn.pixabay.com/photo/2017/02/25/22/04/user-icon-2098873_1280.png", class: "avatar" %>
    <% end %>
    <h2> Bonjour <%= current_user.first_name %> <%= current_user.last_name %></h2>
  </span>
  <p>Surnom: <%= current_user.username %> </p>
  <p>Email: <%= current_user.email %></p>
  <p>Phone number: <%= current_user.phone_number %></p>
  <%= link_to "Modifer", edit_user_registration_path, class: 'btn' %>

</div>
